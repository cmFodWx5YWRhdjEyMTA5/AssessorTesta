<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:id="@+id/cardviewstudentlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/studentlist_len1"
                android:weightSum="4"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/studentlist_batchname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Name"
                    android:theme="@style/accountnameStyle"

                    />



                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/studentlist_totalstudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile number"
                    android:theme="@style/accountnameStyle"
                    />
                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/studentlist_assessment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email ID"
                    android:theme="@style/accountnameStyle"
                    />
                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/studentlist_tcname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tc Name"
                    android:theme="@style/accountnameStyle"
                    />
                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/studentlist_nameee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batch ID"
                    android:textSize="14sp"
                    android:textStyle="normal"

                    />

            </LinearLayout>





            <LinearLayout
                android:weightSum="4"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/studentlist_batchnameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batch Name"
                    android:textSize="14sp"
                    android:textStyle="normal"


                    />



                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/studentlist_totalstudentid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Student"
                    android:textSize="14sp"
                    android:textStyle="normal"

                    />
                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/studentlist_assessmentid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assessment Date"
                    android:textSize="14sp"
                    android:textStyle="normal"

                    />
                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/studentlist_tcnameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tc Name"
                    android:textSize="14sp"
                    android:textStyle="normal"

                    />

                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/studentlist_namee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tc Name"
                    android:textSize="14sp"
                    android:textStyle="normal"

                    />


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>




