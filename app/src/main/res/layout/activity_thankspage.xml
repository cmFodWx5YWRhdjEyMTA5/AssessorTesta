<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Assessor_Exam.Thankspage">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/sucess"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_check_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </RelativeLayout>


    <RelativeLayout

        android:id="@+id/sucess1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/sucess"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:text="Thank You"
            android:textColor="#000"
            android:textSize="42sp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_centerInParent="true"
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sucess1"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <ImageView
            android:id="@+id/imgv1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_star"
            android:layout_marginLeft="30dp"
            />
        <ImageView
            android:id="@+id/imgv2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_star"
            android:layout_marginLeft="80dp"
            />

        <ImageView
            android:id="@+id/imgv3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_star"
            android:layout_marginLeft="130dp"
            />

        <ImageView
            android:id="@+id/imgv4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_star"
            android:layout_marginLeft="180dp"
            />

        <ImageView
            android:id="@+id/imgv5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/ic_star"
            android:layout_marginLeft="230dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/star"
        android:layout_marginBottom="10dp">


        <Button
            android:id="@+id/RateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/mybuttons"
            android:text="Rate Us On Play Store"
            android:textAlignment="center"
            android:textColor="@drawable/button_text_color"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/skipTextView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/RateButton"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/sign_up"
            android:textSize="15sp" />

    </RelativeLayout>




</RelativeLayout>
