<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:id="@+id/cardviewupcoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                >
            <LinearLayout
                android:id="@+id/len1"
                android:weightSum="4"
                android:layout_weight=".8"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <TextView
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:id="@+id/batchname_upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batch Name"
               android:theme="@style/accountnameStyle"

                />



                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/totalstudent_upcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Student"
                    android:theme="@style/accountnameStyle"
                    />
                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/assessment_upcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assessment Date"
                    android:theme="@style/accountnameStyle"
                    />
                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/tcname_upcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tc Name"
                    android:theme="@style/accountnameStyle"
                    />


            </LinearLayout>





            <LinearLayout
                android:weightSum="4"
               android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/batchnameid_upcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batch Name"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textStyle="normal"


                    />



                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/totalstudentid_upcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Student"
                    android:textSize="14sp"
                    android:textStyle="normal"

                    />
                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/assessmentid_upcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assessment Date"
                    android:textSize="14sp"
                    android:textStyle="normal"

                    />
                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/tcnameid_upcoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tc Name"
                    android:textSize="14sp"
                    android:textStyle="normal"

                    />


            </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnResume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resume"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:background="@color/colorExp3"
                android:visibility="gone"
                />


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>




