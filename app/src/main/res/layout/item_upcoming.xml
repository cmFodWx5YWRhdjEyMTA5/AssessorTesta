<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:id="@+id/cardviewupcoming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <LinearLayout
                android:id="@+id/len1"
                android:weightSum="4"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:id="@+id/batchname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batch Name"
               android:theme="@style/accountnameStyle"

                />



                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/totalstudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Student"
                    android:theme="@style/accountnameStyle"
                    />
                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/assessment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assessment Date"
                    android:theme="@style/accountnameStyle"
                    />
                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/tcname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tc Name"
                    android:theme="@style/accountnameStyle"
                    />


            </LinearLayout>





            <LinearLayout
                android:weightSum="4"
               android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/batchnameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batch Name"
                    android:textSize="14sp"
                    android:textStyle="normal"


                    />



                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/totalstudentid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Student"
                    android:textSize="14sp"
                    android:textStyle="normal"

                    />
                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/assessmentid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assessment Date"
                    android:textSize="14sp"
                    android:textStyle="normal"

                    />
                <TextView
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:id="@+id/tcnameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tc Name"
                    android:textSize="14sp"
                    android:textStyle="normal"

                    />


            </LinearLayout>









        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>




